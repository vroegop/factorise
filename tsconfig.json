{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2017", "dom"],
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true
    },
    "include": [
        "./*.ts"
    ],
    "exclude": [
    ]
  }